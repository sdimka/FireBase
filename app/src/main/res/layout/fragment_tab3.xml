<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bottle_big_card"
        android:layout_width="150dp"
        android:layout_height="350dp"
        android:layout_margin="10dp"
        android:background="#DFDFDF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottle_small_card"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="#DFDFDF"
        app:layout_constraintStart_toEndOf="@+id/bottle_big_card"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottle_bottle_image"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="#DFDFDF"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/bottle_big_card"
        app:layout_constraintTop_toBottomOf="@+id/bottle_small_card" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE CHANGES"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>